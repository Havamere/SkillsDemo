{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "firebase": "kr-skills-demo-2021",
    "public": "./dist/skills-demo",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html",
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
